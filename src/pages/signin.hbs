---
title: "Регистрация"
inputs: [
{label: "Почта", type: "email"},
{label: "Логин", type: "password"},
{label: "Имя", type: "text"},
{label: "Фамилия", type: "text"},
{label: "Телефон", type: "tel"},
{label: "Пароль", type: "password"},
{label: "Пароль (еще раз)", type: "password", alert: "Пароли не совпадают"},
]
buttonValue: "Зарегистрироваться"
css:
- signForm.css
- styles.css
- button.css
- styledInput.css
---
{{!< layout}}

<div class="form-wrap wrapper">
    <div class="form-wrap__form form">
        <div class="form__title">Регистрация</div>
        <div class="form__inputs-container">
            {{#each inputs}}
                {{> styledInput/styledInput label=this.label type=this.type}}
            {{/each}}
        </div>
        <div class="form__plug form__plug--signin"></div>
        <div class="form__submit-container">
            {{> button/button classes="btn btn__blue btn__login" value=buttonValue}}
            <a class="link" href="login.hbs">Войти</a>
        </div>
    </div>
</div>
